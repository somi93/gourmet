{% extends 'base.html.twig' %}

{% block content %}
    <div class="content">
    <div class="container_12">

    <div class="grid_6">
        <h2>Database Tables</h2>
        <ul class="list l1">
            <li data-type="link"><a href="#">Navigation Links</a></li>
            <li data-type="menu"><a href="#">Products</a></li>
            <li data-type="chef"><a href="#">Chefs</a></li>
            <li data-type="gallery"><a href="#">Gallery</a></li>
        </ul>
    </div>
    <div id="link" class="grid_3 hidden admin-block" style="text-align: center">
        <h2>Navigation Links</h2>
        <table class="pure-table">
            {% for link in links %}
                <tr>
                    <td>{{ link.linkText }}</td>
                    <td>
                        <a href="{{ path('navigationDelete',{'id': link.id}) }}">
                            <button class="button button-small button-submit">Delete</button>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
    <div id="menu" class="grid_3 hidden admin-block" style="text-align: center">
        <h2>Menu</h2>
        <table class="pure-table">
            {% for product in menu %}
                <tr>
                    <td>{{ product.name }}</td>
                    <td>
                        <a href="{{ path('menuDelete',{'id': product.id}) }}">
                            <button class="button button-small button-submit">Delete</button>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
    <div id="chef" class="grid_3 hidden admin-block" style="text-align: center">
        <h2>Chefs</h2>
        <table class="pure-table">
            {% for chef in chefs %}
                <tr>
                    <td>{{ chef.name }}</td>
                    <td>
                        <a href="{{ path('chefDelete',{'id': chef.id}) }}">
                            <button class="button button-small button-submit">Delete</button>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
    <div id="gallery" class="grid_6 hidden admin-block" style="text-align: center">
        <h2>Gallery Photo</h2>
        <table class="pure-table">
            {% for document in gallery %}
                <tr>
                    <td><img src="{{ asset(document.brochure) }}" style="width:48px;height: 48px;"></td>
                    <td>
                        <a href="{{ path('documentDelete',{'id': document.id}) }}">
                            <button class="button button-small button-submit">Delete</button>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}